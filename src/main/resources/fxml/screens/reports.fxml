<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" spacing="18.0" styleClass="view-container" fx:controller="com.famta.controller.ReportsController">
   <children>
      <Label text="Báo cáo &amp; Thống kê" styleClass="view-title" />
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <ComboBox fx:id="reportCombo" prefWidth="200.0" promptText="Chọn báo cáo" />
            <ComboBox fx:id="yearFilter" prefWidth="150.0" promptText="Năm học" />
            <ComboBox fx:id="semesterFilter" prefWidth="150.0" promptText="Học kỳ" />
            <ComboBox fx:id="classCombo" prefWidth="220.0" promptText="Chọn lớp" />
            <TextField fx:id="thresholdField" promptText="Điểm chuẩn" prefWidth="100.0" />
            <DatePicker fx:id="fromDatePicker" promptText="Từ ngày" prefWidth="150.0" />
            <DatePicker fx:id="toDatePicker" promptText="Đến ngày" prefWidth="150.0" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="filterButton" mnemonicParsing="false" text="Làm mới" onAction="#handleRefresh" />
            <Button fx:id="generateButton" mnemonicParsing="false" text="Tạo báo cáo" onAction="#handleGenerate" />
            <Button fx:id="copyButton" mnemonicParsing="false" text="Sao chép" onAction="#handleCopy" disable="true" />
         </children>
      </HBox>
      <VBox spacing="12.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Tổng quan chỉ số" styleClass="section-title" />
            <HBox spacing="12.0" styleClass="stat-grid">
               <children>
                  <VBox styleClass="stat-card" spacing="4.0">
                     <children>
                         <Label text="Tổng Học sinh" styleClass="card-title" />
                        <Label fx:id="studentValue" text="--" styleClass="card-value" />
                     </children>
                  </VBox>
                  <VBox styleClass="stat-card" spacing="4.0">
                     <children>
                        <Label text="Điểm trung bình" styleClass="card-title" />
                        <Label fx:id="averageScoreValue" text="--" styleClass="card-value" />
                     </children>
                  </VBox>
                  <VBox styleClass="stat-card" spacing="4.0">
                     <children>
                         <Label text="Giáo viên đang giảng dạy" styleClass="card-title" />
                        <Label fx:id="teacherValue" text="--" styleClass="card-value" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Biểu đồ trực quan" styleClass="section-title" />
                  <javafx.scene.layout.StackPane fx:id="chartContainer" prefHeight="300.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                      <children>
                          <Label fx:id="chartDescription" text="Chọn loại báo cáo và nhấn 'Tạo báo cáo' để xem biểu đồ" style="-fx-text-fill: #7f8c8d;" />
                      </children>
                  </javafx.scene.layout.StackPane>
               </children>
            </VBox>
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Nội dung báo cáo" styleClass="section-title" />
                  <Label fx:id="reportStatusLabel" text="Chưa tạo báo cáo" styleClass="info-text" />
                  <TextArea fx:id="reportPreview" promptText="Kết quả báo cáo sẽ hiển thị tại đây" wrapText="true" VBox.vgrow="ALWAYS" styleClass="report-output" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
   </padding>
</VBox>
