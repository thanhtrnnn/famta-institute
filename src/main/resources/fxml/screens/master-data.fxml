<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.famta.controller.MasterDataController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Quản lý danh mục" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <!-- Tab Năm Học -->
        <Tab text="Năm Học">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Button text="Thêm Năm Học" onAction="#handleAddNamHoc"/>
                    <Button text="Sửa" onAction="#handleEditNamHoc"/>
                    <Button text="Xóa" onAction="#handleDeleteNamHoc"/>
                    <Button text="Làm mới" onAction="#loadNamHoc"/>
                </HBox>
                <TableView fx:id="tableNamHoc" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colMaNamHoc" text="Mã Năm Học" prefWidth="100"/>
                        <TableColumn fx:id="colTenNamHoc" text="Tên Năm Học" prefWidth="200"/>
                        <TableColumn fx:id="colNgayBatDau" text="Ngày Bắt Đầu" prefWidth="150"/>
                        <TableColumn fx:id="colNgayKetThuc" text="Ngày Kết Thúc" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab Khoa -->
        <Tab text="Khoa">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Button text="Thêm Khoa" onAction="#handleAddKhoa"/>
                    <Button text="Sửa" onAction="#handleEditKhoa"/>
                    <Button text="Xóa" onAction="#handleDeleteKhoa"/>
                    <Button text="Làm mới" onAction="#loadKhoa"/>
                </HBox>
                <TableView fx:id="tableKhoa" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colMaKhoa" text="Mã Khoa" prefWidth="100"/>
                        <TableColumn fx:id="colTenKhoa" text="Tên Khoa" prefWidth="300"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab Môn Học -->
        <Tab text="Môn Học">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Button text="Thêm Môn Học" onAction="#handleAddMonHoc"/>
                    <Button text="Sửa" onAction="#handleEditMonHoc"/>
                    <Button text="Xóa" onAction="#handleDeleteMonHoc"/>
                    <Button text="Làm mới" onAction="#loadMonHoc"/>
                </HBox>
                <TableView fx:id="tableMonHoc" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colMaMonHoc" text="Mã Môn Học" prefWidth="100"/>
                        <TableColumn fx:id="colTenMonHoc" text="Tên Môn Học" prefWidth="300"/>
                        <TableColumn fx:id="colKhoaMonHoc" text="Khoa" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab Phòng Học -->
        <Tab text="Phòng Học">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Button text="Thêm Phòng Học" onAction="#handleAddPhongHoc"/>
                    <Button text="Sửa" onAction="#handleEditPhongHoc"/>
                    <Button text="Xóa" onAction="#handleDeletePhongHoc"/>
                    <Button text="Làm mới" onAction="#loadPhongHoc"/>
                </HBox>
                <TableView fx:id="tablePhongHoc" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colMaPhongHoc" text="Mã Phòng Học" prefWidth="100"/>
                        <TableColumn fx:id="colTenPhongHoc" text="Tên Phòng Học" prefWidth="200"/>
                        <TableColumn fx:id="colLoaiPhongHoc" text="Loại Phòng" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
