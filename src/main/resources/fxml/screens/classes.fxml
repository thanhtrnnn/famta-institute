<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" spacing="18.0" styleClass="view-container" fx:controller="com.famta.controller.ClassManagementController">
   <children>
      <Label text="Quản lý lớp học" styleClass="view-title" />
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <TextField fx:id="searchField" promptText="Tìm lớp theo tên hoặc mã" />
            <ComboBox fx:id="yearFilter" prefWidth="160.0" promptText="Năm học" />
            <ComboBox fx:id="gradeFilter" prefWidth="140.0" promptText="Khối" />
            <ComboBox fx:id="teacherFilter" prefWidth="160.0" promptText="Giáo viên" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" mnemonicParsing="false" text="Làm mới" onAction="#handleRefresh" />
            <Button mnemonicParsing="false" text="Tạo lớp" disable="true" />
            <Button mnemonicParsing="false" text="Xuất danh sách" disable="true" />
         </children>
      </HBox>
      <Label fx:id="summaryLabel" styleClass="info-text" text="" />
      <HBox spacing="16.0" alignment="TOP_LEFT">
         <children>
            <TableView fx:id="classTable" prefHeight="360.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="codeColumn" prefWidth="140.0" text="Mã lớp" />
                  <TableColumn fx:id="nameColumn" prefWidth="220.0" text="Tên lớp" />
                  <TableColumn fx:id="teacherColumn" prefWidth="160.0" text="Giáo viên" />
                  <TableColumn fx:id="gradeColumn" prefWidth="140.0" text="Khối" />
                  <TableColumn fx:id="sizeColumn" prefWidth="140.0" text="Sĩ số" />
               </columns>
            </TableView>
            <VBox spacing="8.0" prefWidth="260.0">
               <children>
                  <Label text="Ghi chú &amp; lịch" styleClass="section-title" />
                  <TextArea fx:id="notesArea" prefRowCount="12" promptText="Chọn lớp để xem lịch học và ghi chú" wrapText="true" editable="false" />
                  <Button mnemonicParsing="false" text="Mở lịch chi tiết" disable="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
   </padding>
</VBox>
