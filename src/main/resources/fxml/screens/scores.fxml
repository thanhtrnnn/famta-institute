<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" spacing="18.0" styleClass="view-container" fx:controller="com.famta.controller.ScoreManagementController">
   <children>
      <Label text="Quản lý điểm số" styleClass="view-title" />
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ComboBox fx:id="yearFilter" prefWidth="200.0" promptText="Năm học" />
                  <ComboBox fx:id="semesterFilter" prefWidth="120.0" promptText="Học kỳ" />
                  <ComboBox fx:id="classFilter" prefWidth="220.0" promptText="Chọn lớp" />
                  <ComboBox fx:id="subjectFilter" prefWidth="200.0" promptText="Môn học" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ComboBox fx:id="formulaSelector" prefWidth="200.0" promptText="Công thức tính" />
                  <TextField fx:id="searchField" promptText="Lọc theo tên học sinh" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="reloadButton" mnemonicParsing="false" onAction="#handleReload" text="Tải lại" />
                  <Button fx:id="downloadTemplateButton" mnemonicParsing="false" onAction="#handleDownloadTemplate" text="Tải mẫu" />
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="scoreTable" editable="true" prefHeight="360.0" VBox.vgrow="ALWAYS">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="studentIdColumn" prefWidth="150.0" text="Mã học sinh" />
            <TableColumn fx:id="studentNameColumn" prefWidth="240.0" text="Họ và tên" />
            <TableColumn fx:id="regularScoreColumn" prefWidth="160.0" text="Điểm thường xuyên" />
            <TableColumn fx:id="midtermScoreColumn" prefWidth="160.0" text="Điểm giữa kỳ" />
            <TableColumn fx:id="finalScoreColumn" prefWidth="160.0" text="Điểm cuối kỳ" />
            <TableColumn fx:id="averageScoreColumn" prefWidth="160.0" text="Điểm trung bình" editable="false" style="-fx-font-weight: bold; -fx-alignment: CENTER-LEFT;" />
         </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="summaryLabel" text="Chưa có dữ liệu" styleClass="info-text" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="saveDraftButton" mnemonicParsing="false" onAction="#handleSaveDraft" text="Lưu nháp" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveChanges" styleClass="primary" text="Xác nhận" />
         </children>
      </HBox>
      <Label fx:id="statusLabel" styleClass="info-text" text="Chọn lớp để tải bảng điểm" />
   </children>
   <padding>
      <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
   </padding>
</VBox>
