<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" spacing="16.0" styleClass="view-container" fx:controller="com.famta.controller.TeacherManagementController">
  <children>
    <HBox alignment="CENTER_LEFT" spacing="12.0">
      <children>
        <Label text="Quản lý giáo viên" styleClass="view-title" />
        <Pane HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Tìm kiếm theo tên hoặc mã" HBox.hgrow="ALWAYS" />
        <Button mnemonicParsing="false" onAction="#handleRefresh" text="Tải lại" />
        <Button mnemonicParsing="false" onAction="#handleAdd" text="Thêm mới" />
        <Button mnemonicParsing="false" onAction="#handleEdit" text="Sửa" />
        <Button mnemonicParsing="false" onAction="#handleDelete" text="Xóa" />
      </children>
    </HBox>
    <TableView fx:id="teacherTable" prefHeight="420.0" VBox.vgrow="ALWAYS">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      <columns>
        <TableColumn fx:id="colId" prefWidth="140.0" text="Mã giáo viên" />
        <TableColumn fx:id="colFullName" prefWidth="260.0" text="Họ và tên" />
        <TableColumn fx:id="colEmail" prefWidth="260.0" text="Email" />
        <TableColumn fx:id="colPhone" prefWidth="160.0" text="Số điện thoại" />
      </columns>
    </TableView>
  </children>
  <padding>
    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
  </padding>
</VBox>
