<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" spacing="16.0" styleClass="view-container" fx:controller="com.famta.controller.CourseManagementController">
   <children>
      <Label text="Quản lý khóa học" styleClass="view-title" />
      <HBox alignment="CENTER_LEFT" spacing="12.0">
         <children>
            <TextField fx:id="searchField" promptText="Tìm môn học..." prefWidth="250.0" />
            <ComboBox fx:id="departmentFilter" prefWidth="160.0" promptText="Bộ môn" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshClassesButton" text="Tải lại" onAction="#handleRefreshClasses" disable="true" />
            <Button fx:id="addCourseButton" mnemonicParsing="false" text="Thêm mới" onAction="#handleCreateCourse" />
            <Button fx:id="editCourseButton" mnemonicParsing="false" text="Sửa" onAction="#handleEditCourse" />
            <Button fx:id="deleteCourseButton" mnemonicParsing="false" text="Xóa" styleClass="danger" onAction="#handleDeleteCourse" />
         </children>
      </HBox>
      
      <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
         <items>
            <VBox spacing="10.0">
               <padding>
                  <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
               </padding>
               <Label text="Danh sách môn học" styleClass="section-title" />
               <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                  <content>
                     <FlowPane fx:id="courseContainer" hgap="10.0" vgap="10.0" />
                  </content>
               </ScrollPane>
               <Label fx:id="summaryLabel" styleClass="info-text" text="Đang tải..." />
            </VBox>
            
            <VBox spacing="10.0">
               <padding>
                  <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
               </padding>
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label text="Danh sách lớp học" styleClass="section-title" />
                  <ComboBox fx:id="yearFilter" prefWidth="180.0" promptText="Năm học" />
                  <ComboBox fx:id="semesterFilter" prefWidth="120.0" promptText="Học kỳ" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="addClassButton" text="Thêm lớp" onAction="#handleAddClass" disable="true" />
                  <Button fx:id="editClassButton" text="Sửa" onAction="#handleEditClass" disable="true" />
                  <Button fx:id="deleteClassButton" text="Xóa" styleClass="danger" onAction="#handleDeleteClass" disable="true" />
               </HBox>
               <TableView fx:id="classTable" VBox.vgrow="ALWAYS">
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <columns>
                     <TableColumn fx:id="classCodeColumn" text="Mã lớp" prefWidth="100.0" />
                     <TableColumn fx:id="classNameColumn" text="Tên lớp" prefWidth="200.0" />
                     <TableColumn fx:id="classTeacherColumn" text="Giáo viên" prefWidth="150.0" />
                     <TableColumn fx:id="classRoomColumn" text="Phòng" prefWidth="80.0" />
                     <TableColumn fx:id="classSizeColumn" text="Sĩ số" prefWidth="60.0" />
                  </columns>
                  <placeholder>
                     <Label text="Chọn môn học để xem danh sách lớp" />
                  </placeholder>
               </TableView>
            </VBox>
         </items>
      </SplitPane>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
