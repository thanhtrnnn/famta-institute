<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" spacing="18.0" styleClass="view-container" fx:controller="com.famta.controller.CourseManagementController">
   <children>
      <Label text="Quản lý khóa học" styleClass="view-title" />
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <TextField fx:id="searchField" promptText="Tìm khóa học" />
            <ComboBox fx:id="departmentFilter" prefWidth="160.0" promptText="Bộ môn" />
            <ComboBox fx:id="levelFilter" prefWidth="140.0" promptText="Cấp độ" />
            <ComboBox fx:id="statusFilter" prefWidth="140.0" promptText="Trạng thái" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Tạo khóa học" onAction="#handleCreateCourse" />
            <Button mnemonicParsing="false" text="Nhập danh mục" onAction="#handleImportCatalog" />
         </children>
      </HBox>
      <Label fx:id="summaryLabel" styleClass="info-text" text="Đang tải danh sách khóa học..." />
      <FlowPane fx:id="courseContainer" hgap="14.0" vgap="14.0" VBox.vgrow="ALWAYS" />
   </children>
   <padding>
      <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
   </padding>
</VBox>
