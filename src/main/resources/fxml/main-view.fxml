<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.famta.controller.MainController">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Hệ thống">
            <items>
              <MenuItem mnemonicParsing="false" text="Đăng nhập" />
              <MenuItem mnemonicParsing="false" text="Đăng xuất" />
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" text="Thoát" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Quản lý">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleStudentManagement" text="Học viên" />
              <MenuItem mnemonicParsing="false" onAction="#handleTeacherManagement" text="Giáo viên" />
              <MenuItem mnemonicParsing="false" onAction="#handleClassManagement" text="Lớp học" />
              <MenuItem mnemonicParsing="false" onAction="#handleCourseManagement" text="Khóa học" />
              <MenuItem mnemonicParsing="false" onAction="#handleScoreManagement" text="Điểm số" />
              <MenuItem mnemonicParsing="false" onAction="#handleAccountManagement" text="Tài khoản" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Báo cáo">
            <items>
              <MenuItem mnemonicParsing="false" text="Báo cáo học viên" />
              <MenuItem mnemonicParsing="false" text="Báo cáo điểm số" />
              <MenuItem mnemonicParsing="false" text="Báo cáo tài chính" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Trợ giúp">
            <items>
              <MenuItem mnemonicParsing="false" text="Hướng dẫn sử dụng" />
              <MenuItem mnemonicParsing="false" text="Về chúng tôi" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="tabPane" prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="SELECTED_TAB" BorderPane.alignment="CENTER">
        <tabs>
          <Tab closable="false" text="Trang chủ">
            <content>
              <VBox alignment="CENTER" spacing="20.0">
                 <children>
                    <Label styleClass="header" text="Chào mừng đến với FAMTA Institute" />
                    <Label text="Hệ thống quản lý trung tâm đào tạo" />
                    <HBox alignment="CENTER" spacing="20.0">
                       <children>
                          <Button mnemonicParsing="false" onAction="#handleStudentManagement" styleClass="primary" text="Quản lý học viên" />
                          <Button mnemonicParsing="false" onAction="#handleTeacherManagement" styleClass="primary" text="Quản lý giáo viên" />
                          <Button mnemonicParsing="false" onAction="#handleClassManagement" styleClass="primary" text="Quản lý lớp học" />
                       </children>
                    </HBox>
                 </children>
                 <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                 </padding>
              </VBox>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" styleClass="status-bar" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" text="Sẵn sàng" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>